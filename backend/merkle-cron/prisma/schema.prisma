generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id        Int    @id @default(autoincrement())
  root      String
  prop_num  Int    @unique
  full_name String

  last_update DateTime @default(now())
  leaves      Leaf[]
}

model Leaf {
  id      Int      @id @default(autoincrement())
  path    String[]
  indices String[]

  group_id Int
  group    Group @relation(fields: [group_id], references: [id])
}
